<%= form_for(@restaurant) do |f| %>
   <%= render 'form_errors'%>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, :class=>"form-control", :placeholder => "Event Name"  %>
  </div>
  
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description , :class=>"form-control", :placeholder => "Description" %>
  </div>
  
<!--  <%= f.hidden_field :organization_id, :value => @organization%>-->

  <div class="actions">
    <%= f.submit :class=>"btn btn-default" %> <%= link_to 'Cancel', restaurants_path, :class=>"btn btn-default" %>
  </div>
  
<% end %>
